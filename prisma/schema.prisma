generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Todo {
  id          Int       @id @default(autoincrement())
  title       String
  dueDate     DateTime?
  imgURL      String?
  createdAt   DateTime  @default(now())
  order       Int       @default(0)
  duration    Int

  dependedById Int?
  dependedBy   Todo?     @relation("TodoDependency", fields: [dependedById], references: [id])
  dependsOn  Todo[]    @relation("TodoDependency")

  @@unique([dependedById, order]) // Enforce uniqueness of order per parent
}